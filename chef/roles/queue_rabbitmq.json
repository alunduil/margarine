{
  "name": "queue_rabbitmq",
  "description": "Implements a RabbitMQ message queue for margarine.",

  "json_class": "Chef::Role",
  "chef_type": "role",

  "default_attributes": {
    "margarine": {
      "queue": { "type": "amqp" }
    },
    "rabbitmq": {
      "use_distro_version": true
    }
  },

  "override_attributes": {},

  "run_list": [
    "role[base]",
    "recipe[rabbitmq]",
    "recipe[rabbitmq::plugin_management]"
  ]
}
